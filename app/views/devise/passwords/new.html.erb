<div class="col-12 border d-flex justify-content-between align-items-center py-3 px-5">
<div class="col-4">
<h4 class="text-center text-dark fs-3">Having Trouble to Sign in?</h4>
<%= render "devise/shared/error_messages", resource: resource %>

</div>
<div class="d-flex justify-content-center align-items-center flex-column border rounded p-3">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="field d-flex justify-content-center flex-column"">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions align-items-center justify-content-center pt-2">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>